{
  "name": "nats-pubsub",
  "version": "1.0.0",
  "description": "Declarative PubSub messaging for NATS JetStream (Node.js/TypeScript)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./dist/testing/index.d.ts",
        "default": "./dist/testing/index.js"
      },
      "require": {
        "types": "./dist/testing/index.d.cts",
        "default": "./dist/testing/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "nats-pubsub": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli/index.ts --format cjs,esm --dts --clean --sourcemap",
    "build:watch": "tsup src/index.ts src/cli/index.ts --format cjs,esm --dts --sourcemap --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs": "typedoc --out docs src/index.ts",
    "docs:watch": "typedoc --watch --out docs src/index.ts",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "nats",
    "jetstream",
    "pubsub",
    "messaging",
    "event-driven",
    "microservices",
    "typescript",
    "decorators",
    "pub-sub",
    "message-queue",
    "event-bus",
    "nats.io",
    "distributed-systems",
    "async-messaging",
    "dlq",
    "dead-letter-queue"
  ],
  "author": "Mike Attara <mpyebattara@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/attaradev/nats-pubsub",
    "directory": "packages/javascript"
  },
  "bugs": {
    "url": "https://github.com/attaradev/nats-pubsub/issues"
  },
  "homepage": "https://github.com/attaradev/nats-pubsub#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/attaradev"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "nats": "^2.29.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.2",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^10.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
