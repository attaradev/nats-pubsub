{
  "name": "nats-pubsub",
  "version": "0.1.0",
  "description": "Declarative PubSub messaging for NATS JetStream (Node.js/TypeScript)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
    "build:watch": "tsup src/index.ts --format cjs,esm --dts --sourcemap --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs": "typedoc --out docs src/index.ts",
    "docs:watch": "typedoc --watch --out docs src/index.ts",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "nats",
    "jetstream",
    "pubsub",
    "messaging",
    "event-driven",
    "microservices"
  ],
  "author": "Mike Attara <mpyebattara@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/attaradev/nats_pubsub.git",
    "directory": "packages/javascript"
  },
  "bugs": {
    "url": "https://github.com/attaradev/nats_pubsub/issues"
  },
  "homepage": "https://github.com/attaradev/nats_pubsub#readme",
  "dependencies": {
    "nats": "^2.29.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
