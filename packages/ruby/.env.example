# Ruby NatsPubsub Environment Configuration
# Copy this file to .env and update with your actual values

# NATS Server Configuration
NATS_URLS=nats://localhost:4222
NATS_ENV=development
APP_NAME=ruby-app

# Consumer Tuning
CONCURRENCY=10
MAX_DELIVER=5
ACK_WAIT=30s
BACKOFF=1s,5s,15s,30s,60s

# Reliability Features
USE_OUTBOX=true
USE_INBOX=true
USE_DLQ=true

# Database Configuration (for Inbox/Outbox)
DATABASE_URL=postgresql://user:password@localhost:5432/nats_pubsub_dev

# Rails Configuration
RAILS_ENV=development
RACK_ENV=development

# Logging
LOG_LEVEL=info
RAILS_LOG_TO_STDOUT=true

# Web UI (optional)
# Mount point: /nats_pubsub
WEB_UI_ENABLED=true
