# NatsPubsub Environment Configuration Example
# Copy this file to .env and update with your actual values

# NATS Server Configuration
NATS_URLS=nats://localhost:4222
NATS_ENV=development
APP_NAME=my-app

# NATS Authentication (uncomment the method you need)
# Token auth
# NATS_TOKEN=your-secret-token
# User/password auth
# NATS_USER=your-username
# NATS_PASSWORD=your-password
# NKey seed file
# NATS_NKEYS_SEED=/path/to/nkey.seed
# Credentials file (JWT + NKey)
# NATS_CREDENTIALS=/path/to/user.creds

# NATS TLS (uncomment to enable)
# NATS_TLS_CA_FILE=/path/to/ca.crt
# NATS_TLS_CERT_FILE=/path/to/client.crt
# NATS_TLS_KEY_FILE=/path/to/client.key

# Consumer Configuration
CONCURRENCY=5
MAX_DELIVER=3
ACK_WAIT=30s
BACKOFF=1s,5s,15s,30s,60s

# Features
USE_DLQ=true
USE_OUTBOX=false
USE_INBOX=false

# Docker Compose Services
POSTGRES_DB=nats_pubsub_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-in-production

# Database Configuration (for Ruby Inbox/Outbox)
DATABASE_URL=postgresql://postgres:change-me-in-production@localhost:5432/nats_pubsub_dev

# Logging
LOG_LEVEL=info

# Application Environment
NODE_ENV=development
RAILS_ENV=development
