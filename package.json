{
  "name": "nats-pubsub-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Declarative PubSub messaging for NATS JetStream - Monorepo",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules pnpm-lock.yaml",
    "install:js": "pnpm install --filter nats-pubsub",
    "install:ruby": "cd packages/ruby && bundle install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/attaradev/nats_pubsub.git"
  },
  "keywords": [
    "nats",
    "jetstream",
    "pubsub",
    "messaging",
    "monorepo"
  ],
  "author": "Mike Attara <mpyebattara@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/attaradev/nats_pubsub/issues"
  },
  "homepage": "https://github.com/attaradev/nats_pubsub#readme",
  "devDependencies": {
    "prettier": "^3.3.2",
    "tsup": "^8.5.1"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
